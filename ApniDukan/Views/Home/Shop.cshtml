<div class="row">
    @for (int i = 1; i <= 10; i++)
    {
        <div class="card" style="width: 18rem;">
            <div class="card-body">
                <img class="card-img-top" height="300" width="250" src="https://images.unsplash.com/photo-1523275335684-37898b6baf30?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxzZWFyY2h8Mnx8cHJvZHVjdHxlbnwwfHwwfHw%3D&w=1000&q=80" />
                <strong><p>@($"Product {i}| Price: {10 * i}")</p></strong>
                <button class="btn btn-primary" type="button"> Add to Cart</button>
            </div>
        </div>
    }
</div>